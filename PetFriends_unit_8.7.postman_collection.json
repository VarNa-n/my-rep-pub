					],
					"path": [
						"api",
						"create_pet_simple"
					]
				}
			},
			"response": []
		},
		{
			"name": "Change pet name",
			"event": [
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"pm.collectionVariables.set(\"new_name\", pm.collectionVariables.get(\"name\") + \" The New\");"
						],
						"type": "text/javascript"
					}
				},
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"// Проверка неравенства нового и старого имени питомца и сохранение нового имени в переменной name\r",
							"var jsonData = JSON.parse(responseBody);\r",
							"var new_n = jsonData.name;\r",
							"var n = pm.collectionVariables.get(\"name\");\r",
							"\r",
							"pm.test(\"Check that the new pet name '\" + new_n + \"' not equal the old name '\" + n +\"'\", function () {\r",
							"    pm.expect(n).to.not.eql(new_n);\r",
							"});\r",
							"\r",
							"pm.test(\"Save new pet name '\" + new_n + \"'\", function () {\r",
							"    pm.collectionVariables.set(\"name\", new_n)\r",
							"})"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "PUT",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "name",
							"value": "{{new_name}}",
							"type": "text"
						},
						{
							"key": "animal_type",
							"value": "{{animal_type}}",
							"type": "text"
						},
						{
							"key": "age",
							"value": "{{age}}",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{url}}/api/pets/:pet_id",
					"host": [
						"{{url}}"
					],
					"path": [
						"api",
						"pets",
						":pet_id"
					],
					"variable": [
						{
							"key": "pet_id",
							"value": "{{petid}}"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "My pets list",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"var n = pm.collectionVariables.get(\"name\");\r",
							"pm.test(\"Check that 1st pet name is '\" + n + \"'\", function () {\r",
							"    var jsonData = JSON.parse(responseBody);\r",
							"    pm.expect(n).to.eql(jsonData.pets[0].name);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {

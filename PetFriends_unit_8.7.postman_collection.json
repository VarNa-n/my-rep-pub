		{
			"name": "Add pet",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"pm.test(\"Save pet's ID and name\", function () {\r",
							"    var jsonData = JSON.parse(responseBody);\r",
							"    pm.collectionVariables.set(\"petid\", jsonData.id);\r",
							"    pm.collectionVariables.set(\"name\", jsonData.name);\r",
							"    pm.collectionVariables.set(\"age\", jsonData.age);\r",
							"    pm.collectionVariables.set(\"animal_type\", jsonData.animal_type);\r",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "name",
							"value": "{{name}}",
							"type": "text"
						},
						{
							"key": "animal_type",
							"value": "{{animal_type}}",
							"type": "text"
						},
